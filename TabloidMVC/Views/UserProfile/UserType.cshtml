@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "UserType";
}
<div class="container pt-5">
    <h3>Change User Type</h3>
    <div>
        <hr />
        <div class="row justify-content-between">
            <h1 class="text-black-50">@Model.FullName</h1>
        </div>
        <form asp-action="UserType">
            @if (Model.UserTypeId == 1)
            {
                <input type="submit" value="Make Author" class="btn btn-danger" />

            }
            else
            {
                <input type="submit" value="Make Admin" class="btn btn-danger" />
            }
            <a asp-action="Index">Back to List</a>
        </form>
        @if (String.IsNullOrEmpty(Model.ImageLocation))
        {
            <img src="https://images.all-free-download.com/images/graphiclarge/man_silhouette_clip_art_9510.jpg"
                 class="rounded mx-auto d-block"
                 alt="Person" />
        }
        else
        {
            <img src="@Model.ImageLocation" class="rounded mx-auto d-block" alt="Person" />
        }
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DisplayName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DisplayName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreateDateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreateDateTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserTypeId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserType.Name)
            </dd>
        </dl>
    </div>
</div>