@model TabloidMVC.Models.ViewModels.PostManageTagsViewModel

@{
    ViewData["Title"] = "Add Tag to Post";
}

<h2>Add Tag</h2>

<h4>@Model.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPostTag">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div  class="invisible">
                <label asp-for="PostId"></label>
                <input asp-for="PostId" class="form-control" />
                <span asp-validation-for="PostId" class="text-danger"></span>
            </div>
            <div>
                <select asp-for="TagId"
                        asp-items="@(new SelectList(Model.PostTags,"Id","Name"))">
                    <option>Please select a tag</option>
                </select>
            </div>
            <div class="form-group p-3">
                <input type="submit" value="Add Tag" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
